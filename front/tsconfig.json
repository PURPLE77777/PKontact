{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": false,
		"baseUrl": "./app",
		"useDefineForClassFields": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["@types/styled-components-react-native"],
		"paths": {
			"@constants/*": ["./constants/*"],
			"@screens/*": ["./screens/*"],
			"@hooks/*": ["./hooks/*"],
			"@navigation/*": ["./navigation/*"],
			"@api/*": ["./api/*"],
			"@providers/*": ["./providers/*"],
			"@services/*": ["./services/*"],
			"@store/*": ["./store/*"],
			"@assets/*": ["./assets"],
			"@ui/*": ["./ui/*"],
			"@utils/*": ["./utils/*"],
			"@AppTypes/*": ["./types/*"]
		}
	}
}
