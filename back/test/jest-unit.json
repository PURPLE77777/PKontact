{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "../src",
	"testEnvironment": "node",
	"testRegex": ".spec.ts$",
	"moduleDirectories": ["<rootDir>", "node_modules"],
	"preset": "ts-jest",
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/$1"
	},
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	}
}
